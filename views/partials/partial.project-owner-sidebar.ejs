<div class="sidebar_box sb_container">
    <div class="sidebar_box_title">Organizer</div>
    <div class="sidebar_box_content project-creator">

    <% if (project.owner) { %>
	    <div class="sidebar_box_text">
            <span class="sidebar_box_name"><%= project.owner.username %></span>
        </div>
	    <% if (project.owner._attachments) { %>
	       <a href="/profile/<%= project.owner.username %>"><img width="100px" class="profile-image" src="http://<%= auth.db.host %>:<%= auth.db.port %>/users/<%= project.owner._id %>/profile_image" /></a>
	   <% } %>
        <div class="sidebar_box_more_info"><a href="/profile/<%= project.owner.username %>" class="arrow-icon">Full Bio</a></div>
        <div class="clear"></div>
<% } else { %>
        <p class="no_owner_call_to_action">This project currently has no owner. If this sounds like something
           you would like to see happen, then own it. We'll
           help you out with what you need to know to get the project off the
           ground.</p>
        
    <% if (session.user._id) { %>
        <form method="POST" action="edit/<%= project._id %>" enctype="multipart/form-data">
            <input type="hidden" name="_id" value="<%= project._id %>" />
            <input type="hidden" name="owner" value="<%= session.user._id %>" />
            <div class="sidebar_box_more_info"><button type="submit" name="action" value="setowner" class="arrow-icon">Own It</button></div>
        </form>
    <% } else { %>
        <div class="sidebar_box_more_info"><a href="/user/login" class="arrow-icon">Log In</a></div>
    <% } %>
<% } %>
    </div>
</div>

